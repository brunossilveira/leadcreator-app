<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="field"><%= f.input :email, :placeholder => 'Email', :label => false, :required => true, :autofocus => true, :class => 'input' %></div>
      <div class="field"><%= f.input :password, :placeholder => 'Password', :label => false, :required => true, :class => 'input' %></div>
      <div class="field"><%= f.input :password_confirmation, :placeholder => 'Password Confirmation', :label => false, :required => true, :class => 'input' %></div>
    </div>

    <div class="form-actions">
      <div class="success medium btn"><%= f.button :submit, "Sign up" %></div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
