<div class="row">
  <div class="twelve columns">
    <h2>Sign in</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="field"><%= f.input :email, :placeholder => 'Email', :label => false, :required => false, :autofocus => true, :class => 'input' %></div>
        <div class="field"><%= f.input :password, :placeholder => 'Password', :label => false, :required => false, :class => 'input' %></div>
        <label class="checkbox"><%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %></label>
        <div class="medium success btn"><%= f.button :submit, "Sign in" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
